<div class="permission_form_wrapper">
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => "" %>
  </ol>
  <%= simple_form_for [:manage, @permission], :url => manage_permissions_path(@permission), html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>

    <%= f.input :name, :required => true, :autofocus => true,
      :input_html => { :class => 'js-autocomplete', :data => { :url => search_users_path } } %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :class => 'js-autocomplete-target' } %>
    <%= f.input :role, :collection => Permission.available_roles.map{ |role| [I18n.t("role_names.#{role}", :title => '').strip, role] } %>

    <%= f.button :submit, class: "pull-right"%>
  <% end %>
</div>
